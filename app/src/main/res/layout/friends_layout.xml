<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:xnlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:background="@drawable/curve_rec_background"
    android:backgroundTint="#fcfb00"
    android:elevation="8dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcfb00"
        xnlns:cardElevation="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_avatar"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/user_online_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

</LinearLayout>